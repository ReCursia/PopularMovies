<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="150dp"
    android:layout_centerHorizontal="true"
    android:elevation="0dp"
    app:cardCornerRadius="30dp">

    <ImageView
        android:adjustViewBounds="true"
        android:id="@+id/trailerImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/trailer_thumbnail"
        android:scaleType="fitXY" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_movie_poster" />

    <TextView
        android:ellipsize="end"
        android:maxLines="1"
        android:id="@+id/trailerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/playButton"
        android:layout_width="@dimen/play_button_size"
        android:layout_height="@dimen/play_button_size"
        android:layout_gravity="center"
        android:clickable="true"
        android:contentDescription="@string/play_button"
        android:focusable="true"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_play_button" />
</android.support.v7.widget.CardView>